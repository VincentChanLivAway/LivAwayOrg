extends include/templates/layout

block vars
    - var header_transparent = true;
    - var header_one_page    = true;

append css

append content

    // Hero
    section.module-cover.parallax.fullscreen.text-center(data-background="assets/images/module-2.jpg" data-jarallax-video="mp4:assets/video/video.mp4" data-overlay="0.45")
        .container

            .row
                .col-md-12
                    h1.m-b-20: strong LivAway Community
                    p.m-b-40 Connecting foreign startups with a truly local network.
                    p
                        a(href="#services" class="btn btn-lg btn-circle btn-outline-new-white") Learn More
    // Hero end

    = "\n"

    // Services
    section.module#services
        .container

            .row
                .col-lg-6.col-md-9.m-auto.text-center
                    h2 Test Marketing Service
                    p.lead Promote your product/service demo to targeted Chinese customer/distributor for feedback. Align your product to the targeted niche. 

            .row
                .col-md-12
                    .space(data-MY="60px")

            .row
                .col-md-12
                    img(src="assets/images/main/notebook.png" alt="")

            .row
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-layout-media-left", "Find the Target", "Tell us your target, no matter they are corporate customers, distributors, or individual customers, we find them out.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-desktop", "Deep Interview", "Invite the target to have a confernce with you for 1+ hour, using Chinese ways to dig deep about decistion making process.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-face-smile", "Friend's Connection", "We are bilingual Chinese who are willing refer our Chinese friends for your business connection.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-marker-alt", "Verify Sales Strategy", "Present your sales script to your target, check their feedback, listen to their advice and reaction.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-star", "Verify Marketing Strategy", "Present your marketing brochure/video to your target, ask them what attracted them most, what didn't.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-layout-sidebar-right", "Verify User Persona", "Make an assumption of your target's persona, verify with the interviewee to prove/disprove your assumption.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-headphone-alt", "Online Interview", "No matter you are in your own country or in China, we get your target customer to talk to you online.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-layout-slider", "Refine Your Product", "Use all the sincere feedback to iterate your product to achieve product-market fit.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-stats-up", "Refine Your Strategy", "Analyze the feedback of your target customer to make the revision your sales script/strategy.")
            .row
                .col-md-12.text-center
                    p
                        a(href="https://jinshuju.net/f/6caOzE" class="btn btn-lg btn-circle btn-brand") Get a Quote Now
    
    // Services end
    = "\n"

    // Testimonials
    section.module.parallax(data-background="assets/images/module-12.jpg" data-overlay="0.5")
        .container

            .row
                .col-md-12
                    .space(data-MY="50px")

            .row
                .col-md-12
                    .review-slides.owl-carousel
                        +TestimonialsCard("Allen Wolff", "LivAway’s network of industry experts are an invaluable resource for new startup founders operating in China. I gained fresh insights into the ever-changing education market thanks to LivAway.", "./assets/images/clients/allen.jpg")
                        +TestimonialsCard("Duraid Hasan", "We have developed a great partnership with LivAway and their dedication to our enterprise expansion is evident in all aspects of our business development locally.  We appreciate their constant feedback and creative networking approach, They have truly helped us matching our company with high-end partners perfectly.", "./assets/images/clients/duraid.jpg")
                        +TestimonialsCard("David 'DC' Collier ", "LivAway was very helpful to me in meeting some relevant people for my startup and also navigating the maze of Tencent application processes for WeChat apps. A great network for any foreign founder to connect to!", "./assets/images/clients/dc.jpg")

            .row
                .col-md-12
                    .space(data-MY="50px")
    // Testimonials end

    // Counters
    section.module.bg-gray.p-b-0
        .container

            .row
                .col-md-3
                    +Counter("Local Business Resources", "50000", "icon-energy icons")
                .col-md-3
                    +Counter("LivAway Connectors", "85", "icon-game-controller icons")
                .col-md-3
                    +Counter("Business Events Hold", "103", "icon-fire icons")
                .col-md-3
                    +Counter("Different Cities", "5", "icon-diamond icons")
    // Counters end

    = "\n"

    // Image
    section.module.no-gutters.p-0
        .container-fluid

